---
import Layout from '../layouts/PageLayout.astro';
import {data} from '@data';
const {work} = data.portfolio;
---

<Layout lang='en' title='protofolio' isMenuFixed>
<div class="w-full h-full flex flex-wrap justify-around md:px-40 px-0">
    {work.map(element => {
        return(<div class={`bg-secondary md:w-[30vw] md:h-[13vw] w-[80vw] h-[40vw] rounded-xl card-portfolio group py-3 my-6 md:my-0`} style={`background-image: url(${element.image})`}><div class="flex justify-center items-center opacity-0 group-hover:opacity-100 flex-col "><h1 class="text-3xl text-primary font-medium">{element.name}</h1><div class="flex justify-around w-full md:mt-[6vw] mt-[15vh]"><a>Live</a><a>Source</a></div></div></div>)
    })}
</div>
</Layout>
<style>
    .card-portfolio {
        background-position: top;
        background-size: cover;
    }
    .card-portfolio:hover {
        background-image: url('./') !important;
    }
</style>